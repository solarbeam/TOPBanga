<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_end_game"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="50dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/team1Label"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TEAM 1"
        android:textColor="#ffffffff" />
    <TextView
        android:id="@+id/team1Name"
        android:layout_alignStart="@+id/team1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team1Label"
        android:text="Bangelė"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="24sp"
        android:textColor="#ffffffff" />
    <TextView
        android:id="@+id/team2Label"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="TEAM 2"
        android:textColor="#ffffffff" />
    <TextView
        android:id="@+id/team2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/team2Label"
        android:layout_below="@+id/team2Label"
        android:text="Vėjelis"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="24sp"
        android:textColor="#ffffffff" />
    <TextView
        android:id="@+id/team1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team1Name"
        android:layout_centerHorizontal="true"
        android:text="3  :  5"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="45sp"
        android:textColor="#ffffffff" />
    <TextView
        android:id="@+id/team2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team2Name"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/team2Name"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="45sp" />
    <TextView
        android:id="@+id/durationLabel"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team1Score"
        android:layout_centerHorizontal="true"
        android:text="Duration"
        android:textColor="#ffffffff" />
    <TextView
        android:id="@+id/durationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationLabel"
        android:layout_centerHorizontal="true"
        android:text="05:32"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/activityZonesLabel"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationValue"
        android:text="Table activity zones"
        android:textColor="#ffffffff" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/avgBallSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average ball speed"
            android:textColor="#ffffffff" />
        <TextView
            android:id="@+id/avgBallSpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 cm/s"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:id="@+id/maxBallSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest ball speed"
            android:textColor="#ffffffff" />
        <TextView
            android:id="@+id/maxBallSpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55 cm/s"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>