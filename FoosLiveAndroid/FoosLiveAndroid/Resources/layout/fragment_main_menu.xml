<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="40dp">
    <TextView
        android:id="@+id/logoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/app_name"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textSize="40sp" />
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_logo" />
    <LinearLayout
        android:id="@+id/buttonsMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/buttons_distance"
            android:background="@drawable/menu_button_selector"
            android:minHeight="40dp"
            android:minWidth="250dp"
            android:stateListAnimator="@null"
            android:text="@string/start"
            android:textAllCaps="false"
            android:textColor="@color/button_text" />
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/buttons_distance"
            android:background="@drawable/menu_button_selector"
            android:minHeight="40dp"
            android:minWidth="250dp"
            android:stateListAnimator="@null"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/button_text" />
        <Button
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_button_selector"
            android:minHeight="40dp"
            android:minWidth="250dp"
            android:stateListAnimator="@null"
            android:text="@string/info"
            android:textAllCaps="false"
            android:textColor="@color/button_text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonsMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <Button
            android:id="@+id/liveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/buttons_distance"
            android:background="@drawable/menu_button_selector"
            android:minHeight="40dp"
            android:minWidth="250dp"
            android:stateListAnimator="@null"
            android:text="@string/live"
            android:textAllCaps="false"
            android:textColor="@color/button_text" />
        <Button
            android:id="@+id/fromFileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/buttons_distance"
            android:background="@drawable/menu_button_selector"
            android:minHeight="40dp"
            android:minWidth="250dp"
            android:stateListAnimator="@null"
            android:text="@string/from_file"
            android:textAllCaps="false"
            android:textColor="@color/button_text" />
    </LinearLayout>
</LinearLayout>